    <script>
        $(function(){

            $('#font-size').change(function(){
                $.cookie('font-size', $('#font-size').val());
            })
            if(!$.cookie('font-size')){
                $.cookie('font-size', 20);
            }
            $('#font-size').val( $.cookie('font-size'))
            $('table, p').css('font-size', $.cookie('font-size')+"px");
        })
    </script>
